---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";

import logoImg from "@assets/images/logo.jpeg";
import hero1Img from "@assets/images/hero1.jpeg";
import hero2Img from "@assets/images/hero2.jpeg";
import hero3Img from "@assets/images/hero3.jpeg";
import basketballPatternImg from "@assets/images/basketballPattern.png";
import runningManGif from "@assets/images/runningMan.gif";
import runningManStillImg from "@assets/images/runningMan.png";

import service1Img from "@assets/images/services/service1.jpeg";
import service2Img from "@assets/images/services/service2.jpeg";
import service3Img from "@assets/images/services/service3.jpeg";
import service4Img from "@assets/images/services/service4.jpeg";
import service5Img from "@assets/images/services/service5.jpeg";

const serviceImgs = [
  service1Img,
  service2Img,
  service3Img,
  service4Img,
  service5Img,
];

import tanya1Img from "@assets/images/tanya1.jpeg";
import tanya2Img from "@assets/images/tanya2.jpeg";

import config from "@data/config.json";
---

<Layout title={config.businessName}>
  <div id="intro" class="bg-primary absolute w-full h-full z-20">
    <Image
      id="runningManGif"
      src={runningManGif}
      alt="hero img"
      class="w-72 absolute top-1/3 -translate-y-1/2 left-1/2 -translate-x-1/2"
    />
  </div>
  <main>
    <section class="h-screen w-full relative overflow-hidden z-10">
      <div
        class="flex flex-col w-full items-center absolute top-1/2 -translate-y-[50%] gap-16 left-1/2 -translate-x-1/2 z-30"
      >
        <Image src={logoImg} alt="logo" class="rounded-2xl w-64 max-md:w-44" />
        <div class="relative">
          <h1
            class="text-8xl uppercase text-center font-extrabold text-primary max-md:my-4"
          >
            {config.businessName}
          </h1>
          <div
            class="w-[105%] left-1/2 -translate-x-1/2 h-1/2 bg-secondary absolute bottom-0 -z-10 max-md:h-full max-md:w-full"
          >
          </div>
        </div>
        <div class="flex gap-8">
          <a
            href={config.bookingLink}
            target="_blank"
            class="btn btn-primary font-extrabold btn-lg">Book Now</a
          >
          <a href="#contact" class="btn btn-secondary font-extrabold btn-lg"
            >Contact Now</a
          >
        </div>
      </div>
      <Image
        src={hero1Img}
        alt="hero img"
        class="heroImg object-cover absolute h-full w-full grayscale-[0.7] z-20"
      />
      <Image
        src={hero2Img}
        alt="hero img"
        class="heroImg object-cover absolute h-full w-full grayscale-[0.7] z-10"
      />
      <Image
        src={hero3Img}
        alt="hero img"
        class="object-cover absolute h-full w-full grayscale-[0.7]"
      />
    </section>
    <section class="bg-primary py-16 px-4" id="about">
      <div class="max-w-screen-xl mx-auto flex flex-col gap-16 max-md:gap-8">
        <div class="flex flex-col gap-8">
          <div class="flex relative">
            <h1 class="text-white font-extrabold text-8xl">
              Meet Tanya Browne
            </h1>
            <div
              id="basketball"
              class="rounded-full absolute right-0 bg-amber-600 w-full max-w-52 aspect-square overflow-hidden mx-auto"
            >
              <Image
                src={basketballPatternImg}
                id="basketballPattern"
                alt="basketball pattern"
                class="w-[200%] max-w-none absolute top-1/2 left-1/4 -translate-x-1/2 -translate-y-1/2"
              />
            </div>
          </div>

          <p
            class="italic text-xl font-light text-secondary max-w-2xl whitespace-pre-line"
          >
            {config.credentials}
          </p>
        </div>

        <div
          class="grid grid-cols-2 grid-rows-2 max-md:grid-cols-1 max-md:grid-rows-4 gap-8 place-items-center"
        >
          <p class="text-white text-2xl font-light">{config.description1}</p>
          <Image
            src={tanya1Img}
            alt="tanya"
            class="rounded-2xl w-96 border-[16px] border-secondary max-md:row-start-1"
          />
          <Image
            src={tanya2Img}
            alt="tanya"
            class="rounded-2xl w-96 border-[16px] border-secondary"
          />
          <p class="text-white text-2xl font-light text-right max-md:text-left">
            {config.description2}
          </p>
        </div>
      </div>
    </section>
    <section
      class="max-w-screen-xl mx-auto flex flex-col gap-16 py-16 px-4"
      id="services"
    >
      <h1 class="text-primary text-8xl font-extrabold">My Services</h1>
      <div class="flex flex-col gap-8">
        {
          config.services.map((service, index) => (
            <div class="collapse collapse-arrow bg-base-200">
              <div class="collapse collapse-arrow bg-base-200">
                {index == 0 ? (
                  <input type="radio" name="my-accordion-2" checked />
                ) : (
                  <input type="radio" name="my-accordion-2" />
                )}
                <div class="collapse-title text-4xl text-primary font-extrabold">
                  {service.name}
                </div>
                <div class="collapse-content">
                  <div class="grid grid-cols-2 grid-rows-1 max-md:grid-cols-1 max-md:grid-rows-2 place-items-center gap-8">
                    <p class="text-xl font-light">{service.description}</p>
                    <Image
                      src={serviceImgs[index]}
                      alt="service"
                      class="rounded-2xl w-96 border-[16px] border-secondary"
                    />
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </section>
    <section>
      <div
        class="grid grid-cols-2 grid-rows-1 max-md:grid-cols-1 max-md:grid-rows-2 bg-primary"
      >
        <div
          class="flex flex-col gap-4 max-md:p-8 p-16 bg-primary items-center justify-center text-white max-w-2xl mx-auto"
        >
          <h1 class="text-center font-extrabold text-9xl">Find Me Here</h1>
          <h2 class="text-center text-4xl">{config.address}</h2>
        </div>
        <div id="map" class="h-full w-full"></div>
      </div>
    </section>
    <section
      id="contact"
      class="flex flex-col gap-16 py-16 max-w-screen-lg mx-auto px-2"
    >
      <h1 class="text-9xl uppercase font-extrabold text-center text-primary">
        Contact Me
      </h1>
      <div class="flex flex-col gap-5 items-center">
        <p class="text-center italic text-2xl">
          via my phone number: <span
            ><a
              class="link link-secondary"
              href={config.socials.filter((social) => social.name == "phone")[0]
                .url}
            >
              {
                config.socials
                  .filter((social) => social.name == "phone")[0]
                  .url.split("+64")[1]
              }</a
            ></span
          >
        </p>
        <p class="text-center text-2xl italic">or via the form below</p>
      </div>

      <form
        name="contact"
        method="POST"
        data-netlify="true"
        class="bg-primary p-8 rounded-2xl py-12 flex flex-col gap-2"
      >
        <label for="fname" class="text-white">First name</label>
        <input
          autocomplete="on"
          type="text"
          id="fname"
          class="form-input px-4 py-3 w-full rounded bg-stone-100"
        />
        <label for="lname" class="text-white">Last name</label>
        <input
          autocomplete="on"
          type="text"
          id="lname"
          class="form-input px-4 py-3 w-full rounded bg-stone-100"
        />
        <label for="email" class="text-white">Email</label>
        <input
          autocomplete="on"
          type="email"
          id="email"
          class="form-input px-4 py-3 w-full rounded bg-stone-100"
        />
        <label for="message" class="text-white">Message</label>
        <textarea
          name="message"
          id="message"
          class="form-input px-4 py-3 rounded w-full bg-stone-100"
          cols="30"
          rows="10"></textarea>
        <div class="flex w-full justify-center my-6">
          <input type="submit" value="Submit" class="btn btn-secondary" />
        </div>
      </form>
    </section>
  </main>
</Layout>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  const introTimeline = gsap.timeline();
  introTimeline
    .from("#runningManGif", {
      x: "-300%",
      duration: 3,
      ease: "power2.out",
    })
    .to("#intro", {
      opacity: 0,
      display: "none",
    });

  const heroBGTimeline = gsap.timeline({
    yoyo: true,
    repeatDelay: 3,
    delay: 3,
    repeat: -1,
  });

  heroBGTimeline.to(".heroImg", {
    opacity: 0,
    duration: 2,
    stagger: 6,
  });

  const basketballTimline = gsap.timeline();
  basketballTimline
    .fromTo(
      "#basketball",
      {
        opacity: 0,
      },
      {
        opacity: 1,
        scrollTrigger: {
          trigger: "#about",
          start: "top center",
          end: "top center",
          scrub: true,
        },
      }
    )
    .fromTo(
      "#basketball",
      { translateY: "-150%" },
      {
        translateY: "150%",
        scrollTrigger: {
          trigger: "#about",
          start: "top center",
          end: "bottom center",
          scrub: true,
        },
      }
    )
    .fromTo(
      "#basketballPattern",
      { translateY: "-10%" },
      {
        translateY: "20%",
        scrollTrigger: {
          trigger: "#about",
          start: "top center",
          end: "bottom center",
          scrub: true,
        },
      },
      "0"
    );

  // @ts-ignore
  var map = L.map("map").setView([-36.854944535768496, 174.78057108465723], 18);
  // @ts-ignore
  L.marker([-36.854944535768496, 174.78057108465723]).addTo(map);

  // @ts-ignore
  L.tileLayer("https://tile.openstreetmap.org/{z}/{x}/{y}.png", {
    maxZoom: 18,
    minZoom: 16,
    attribution:
      '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>',
  }).addTo(map);
</script>
